@page
@model AddProductModel
@{
}

<style>
     form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        padding-top:  100px;
    }
    .dashboard-containers {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 100px; 
</style>

<div class="dashboard-containers">
<form method="post">
     <label for="farmerName"> Please add new or existing products:</label> 
    <div>
        <label for="productname">Product Name:</label>
        <input type="text" id="productname" name="productname" required maxlength="20" />
    </div>
    <div>
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" required maxlength="20" />
    </div>
    <div>
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" required step="1" />
    </div>
    <div>

    <button type="submit">Save</button>
        <a href="javascript:history.back()" class="back-button">Back</a>
</form>
</div>